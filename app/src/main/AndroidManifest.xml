<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.infinity_courseproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:name=".roomDatabase.MyApplication"
        android:supportsRtl="true"
        android:theme="@style/Theme.InfinityCourseProject">
        <activity android:name=".home.NotificationActivity"
            android:parentActivityName=".RoutinesActivity">
        </activity>
        <activity android:name=".PassengerActivity"
            android:parentActivityName=".RoutinesActivity">
        </activity>
        <activity
            android:name=".home.Home"
            android:theme="@style/Theme.InfinityCourseProject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RoutinesActivity"
            android:theme="@style/Theme.InfinityCourseProject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name=".RoutinesAddActivity"
            android:parentActivityName=".RoutinesActivity">
        </activity>

        <activity
            android:name=".AssignmentsActivity"
            android:theme="@style/Theme.InfinityCourseProject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name=".AssignmentsAddActivity"
            android:parentActivityName=".AssignmentsActivity">
        </activity>

        <activity android:name=".EventsEditActivity"
            android:parentActivityName=".RoutinesAddActivity">
        </activity>

        <activity
            android:name=".CourseActivity"
            android:theme="@style/Theme.InfinityCourseProject.NoActionBar">
        </activity>

        <activity android:name=".CourseAddEditActivity"
            android:parentActivityName=".CourseActivity">
        </activity>

        <activity android:name=".home.NotificationAtivity"
            android:parentActivityName=".home.Home">
        </activity>


        <service android:name=".TimeService"/>


    </application>

</manifest>